		update cmt 
		set 
		cmt_no=#{cmt_no},
		board_no=#{board_no},
		cmt_content=nvl(#{cmt_content,jdbcType=VARCHAR},cmt_content),
		cmt_del_check=nvl(#{cmt_del_check,jdbcType=VARCHAR},cmt_del_check),
